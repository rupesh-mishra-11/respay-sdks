<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payment_background">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/psdk_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/payment_primary"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/psdk_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="@string/make_payment"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/psdk_btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/psdk_progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/psdk_toolbar" />

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/psdk_errorLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/psdk_toolbar">

        <TextView
            android:id="@+id/psdk_tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/error_loading"
            android:textColor="@color/payment_text_secondary"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/psdk_btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/retry" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:id="@+id/psdk_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/psdk_toolbar"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Amount Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/payment_primary"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_to_pay"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/psdk_tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        tools:text="$99.99" />

                    <TextView
                        android:id="@+id/psdk_tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#B0FFFFFF"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="Pool Reservation" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Select Payment Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/select_payment_method"
                android:textColor="@color/payment_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Payment Methods List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/psdk_rvPaymentMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/psdk_item_payment_method" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/psdk_emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:padding="24dp"
                android:text="@string/no_payment_methods"
                android:textColor="@color/payment_text_secondary"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Apple Pay Option -->
            <!-- Note: This appears after the payment methods list. Availability is checked when user clicks it. -->
            <RadioButton
                android:id="@+id/psdk_radioApplePay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="Pay with Apple Pay"
                android:visibility="visible" />

            <!-- Add Card Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/psdk_btnAddCard"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_new_card"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart" />

            <!-- Validate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/psdk_btnValidate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Validate"
                app:iconGravity="textStart" />

            <!-- Finalise Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/psdk_btnFinalise"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Finalise"
                app:iconGravity="textStart" />

            <!-- Pay Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/psdk_btnPay"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:enabled="false"
                    android:text="@string/pay_now"
                    android:textSize="16sp"
                    app:backgroundTint="@color/payment_primary" />

                <ProgressBar
                    android:id="@+id/psdk_paymentProgress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@android:color/white"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Full Screen Loader Overlay -->
    <FrameLayout
        android:id="@+id/psdk_loaderOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white" />
    </FrameLayout>

    <!-- Success State -->
    <LinearLayout
        android:id="@+id/psdk_successLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/psdk_toolbar"
        tools:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_success"
            app:tint="@color/payment_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/payment_successful"
            android:textColor="@color/payment_success"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/psdk_tvSuccessAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/payment_text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="$99.99" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_info_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_id"
                    android:textColor="@color/payment_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/psdk_tvTransactionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/payment_text_primary"
                    android:textSize="14sp"
                    tools:text="TXN-123456789" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="@color/payment_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirmation"
                    android:textColor="@color/payment_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/psdk_tvConfirmationNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/payment_text_primary"
                    android:textSize="14sp"
                    tools:text="CNF-987654" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/psdk_btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/done"
            android:textSize="16sp"
            app:backgroundTint="@color/payment_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
